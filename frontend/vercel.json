{
  "version": 2,
  "name": "simpay-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://simpay-backend.railway.app/api",
    "NEXTAUTH_URL": "https://sim-pay-frontend.vercel.app",
    "NEXTAUTH_SECRET": "your-nextauth-secret-here"
  },
  "functions": {
    "frontend/src/app/**": {
      "maxDuration": 30
    }
  }
}